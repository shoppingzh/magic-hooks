{
  "compilerOptions": {
    "target": "ES6",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "__tests__/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
